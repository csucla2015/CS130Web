<!-- Navigation -->
<a id="home-button" href="/" class="btn btn-dark btn-lg toggle"><i class="fa fa-home"></i></a>
<input id="phoneNumber" type="text" hidden="hidden" value="<%= playlist.phoneNumber %>" />
<input id="playlistKey" type="text" hidden="hidden" value="<%= playlist.info.key %>"/>

<section id="create" class="create bg-primary">
  <div class="container">
    
    <div class="text-center">
      <h1 id="playlistName"><%= playlist.name %></h1>
      <h2 id="playlistDesc"><%= playlist.description %></h2>
      <hr class="small" />
      <h1 id="playlistNumber">Text a song to: <%= playlist.phoneNumber %></h1>
    </div>
    <div id="apiswf"></div>
        <div class="row">
          <span class="left">Song Title</span><input id="title" class="right" type="text" placeholder="Shake It Off" autofocus /><br />
          <button id="search" class="btn btn-lg btn-light">Search</button>
        </div>
        <div class="row">
          <div class="col-md-6"> 
            <div class="playControls btn-group">
              <button id="play" class="btn btn-default"><i class="fa fa-play-circle"></i> Play</button>
              <button id="stop" class="btn btn-default"><i class="fa fa-stop"></i> Stop</button>
              <button id="pause" class="btn btn-default"><i class="fa fa-pause"></i> Pause</button>
              <button id="previous" class="btn btn-default"><i class="fa fa-step-backward"></i> Previous</button>
              <button id="next" class="btn btn-default"><i class="fa fa-step-forward"></i> Next</button>
            </div>
          </div>
      </div>
      <div class="row well">
        <div class="artistAlbumInfo well col-md-6 ">
          <h3><span id="artist"></span> - <span id="track"></span></h3>
          <img src="" id="art" class="albumArt">
        </div>
        <div class="col-md-6">
          <h3 id="album"></h3>
          <h4>Playstate <p id="playState"></p></h4>
          <h4>Position <p id="position"></p></h4>
        </div>
      </div>
  </div>
</section>

